<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ImageView android:id="@+id/help_iv" android:background="@drawable/icon2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	></ImageView>
<TextView android:id="@+id/help_title" android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/HelpTitle"></TextView>
	<TextView android:id="@+id/help_content" android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/HelpContent"></TextView>
<Button android:id="@+id/help_back" android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="right"
	android:text="BACK"></Button>
</LinearLayout>
